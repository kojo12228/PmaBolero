@page "/"
@namespace PmaBolero.Server
@using Bolero.Server
@inject IBoleroHostConfig BoleroHostConfig
<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bolero Application</title>
    <base href="/">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bulma/0.7.4/css/bulma.min.css">
    <link rel="stylesheet" href="css/index.css">
    <script>
      window.setTitle = (title) => {
        document.title = title;
      }
    </script>
    <link href="manifest.json" rel="manifest" />
    <link rel="apple-touch-icon" sizes="512x512" href="pwa/icons/icon-512.png" />
  </head>
  <body>
    <div id="main">@(await Html.RenderComponentAsync<PmaBolero.Client.Pages.Main.MyApp>(BoleroHostConfig))</div>
    @Html.RenderBoleroScript(BoleroHostConfig)
  </body>
  <script>navigator.serviceWorker.register('service-worker.js');</script>
</html>

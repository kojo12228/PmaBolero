{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "run server",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "run",
                "-p",
                "src/PmaBolero.Server"
            ],
            "group": "none",
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": []
        },
        {
            "label": "build server",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "build",
                "src/PmaBolero.Server"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": []
        },
        {
            "label": "build client",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "build",
                "src/PmaBolero.Client"
            ],
            "group": "build",
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": []
        }
    ]
}